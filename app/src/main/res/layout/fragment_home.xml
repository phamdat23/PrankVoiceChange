<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Sound magic"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/lakkireddy_regular"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="23dp"/>

    <ImageView
        android:id="@+id/img_hat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_title1"
        android:src="@drawable/grouphat" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/sound_waves"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-12dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_title1"
        app:layout_constraintTop_toBottomOf="@+id/img_hat"/>

</androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
            android:id="@+id/btn_sound"
            android:layout_width="282dp"
            android:layout_height="126dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="140dp"
            android:elevation="5dp"
            android:background="@drawable/rectangle_1_1"
            android:padding="35dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/music_wave" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_voice"
            android:layout_width="282dp"
            android:layout_height="126dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="318dp"
            android:elevation="5dp"
            android:background="@drawable/rectangle_2"
            android:padding="35dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/microphone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_favorite"
            android:layout_width="282dp"
            android:layout_height="126dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="54dp"
            android:elevation="5dp"
            android:layout_marginTop="496dp"
            android:background="@drawable/rectangle_3"
            android:padding="30dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/sound_waves" />
        </RelativeLayout>

</RelativeLayout>